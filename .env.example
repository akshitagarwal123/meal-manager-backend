# Server
HOST=0.0.0.0
PORT=3000
NODE_ENV=development

# Auth
JWT_SECRET=change_me_to_a_strong_random_secret
QR_TOKEN_SECRET=change_me_to_a_separate_strong_secret
QR_TOKEN_TTL_SECONDS=30
QR_TOKEN_LEEWAY_SECONDS=10

# Database (use either DATABASE_URL or PG* vars)
# DATABASE_URL=postgres://user:password@host:5432/dbname
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=password
PGDATABASE=meal_manager
PGPORT=5432

# Email (OTP)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=user@example.com
EMAIL_PASS=password
OTP_EMAIL_TIMEOUT_MS=15000

# Brevo (preferred on Render)
# BREVO_API_KEY=your_brevo_api_key
# EMAIL_FROM=CountWise <no-reply@yourdomain.com>

# CORS
# CORS_ORIGINS=https://app.example.com,https://admin.example.com

# Logs
LOG_REQUESTS=true
LOG_REQUESTS_MODE=summary
LOG_FLOW=true
LOG_SENSITIVE=false
LOG_FLOW_JSON=false
LOG_LEVEL=info

# Debug only
EXPOSE_ERRORS=false
